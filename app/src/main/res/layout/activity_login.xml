<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17162B"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:scaleType="fitXY"
        android:src="@drawable/application_artboard" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_login_title_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/assistant"
                    android:gravity="center"
                    android:text="הירשם לאפליקציה"
                    android:textColor="#ffffff"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/activity_login_title2_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/assistant"
                    android:gravity="center"
                    android:text="ושלח את הברכה"
                    android:textColor="#ffffff"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/activity_login_email_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:fontFamily="@font/assistant"
                    android:hint="כתוב את האימייל..."
                    android:inputType="textEmailAddress"
                    android:textColor="#ffffff"
                    android:textColorHint="#68fcf6f6" />

                <EditText
                    android:id="@+id/activity_login_password_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:fontFamily="@font/assistant"
                    android:hint="כתוב את הסיסמה..."
                    android:inputType="textPassword"
                    android:textColor="#ffffff"
                    android:textColorHint="#68fcf6f6" />

                <Button
                    android:id="@+id/activity_login_login_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/button2"
                    android:fontFamily="@font/assistant"
                    android:text="התחבר"
                    android:textColor="#ffffff"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/activity_login_register_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button1"
                    android:fontFamily="@font/assistant"
                    android:text="הרשמה"
                    android:textColor="#ffffff"
                    android:textSize="22sp" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>
