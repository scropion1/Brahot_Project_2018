<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_article_scroll_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:id="@+id/activity_article_linear">

            <LinearLayout
                android:id="@+id/activity_article_linear_layout_brahot_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <TextView
                    android:id="@+id/activity_article_braha_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ברכה"
                    android:fontFamily="@font/assistant"
                    android:textColor="#ffffff"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/activity_article_sex_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/assistant"
                    android:textColor="#ffffff"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_article_for_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_article_linear_layout_brahot_text"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_article_for_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:fontFamily="@font/assistant"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/activity_article_gender_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gender"
                    android:fontFamily="@font/assistant"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/activity_article_parents_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="parents"
                    android:fontFamily="@font/assistant"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_article_linear_layout_text_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_article_text_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/assistant"
                    android:textColor="#ffffff"
                    android:text="טקסט" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_article_share_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="שתף באמצעות"
            android:fontFamily="@font/assistant"
            android:textColor="#ffffff"
            android:backgroundTint="#17162B"
            android:textSize="18sp" />

        <Button
            android:id="@+id/activity_article_share_pic_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="שתף תמונה ב-"
            android:drawableLeft="@drawable/ic_whatsapp"
            android:fontFamily="@font/assistant"
            android:textColor="#ffffff"
            android:backgroundTint="#17162B"
            android:textSize="18sp"/>

    </LinearLayout>

</RelativeLayout>
